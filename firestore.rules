
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function userIsAdmin(uid) {
      // Check if the user is an admin by looking up their user document.
      // Make sure there's a 'users' collection where admin status is stored.
      return isSignedIn() && get(/databases/$(database)/documents/users/$(uid)).data.isAdmin == true;
    }

    match /users/{userId} {
      // Admins can read/write any user profile.
      allow read, write: if userIsAdmin(request.auth.uid);
      // Non-admin users can read their own profile.
      // Non-admin users can also list/read other profiles for display purposes (e.g., names).
      allow get, list: if isSignedIn() && !userIsAdmin(request.auth.uid);
    }

    match /groups/{groupId} {
      // Admins have full access.
      allow read, write: if userIsAdmin(request.auth.uid);
      // Non-admins have read-only access.
      allow get, list: if isSignedIn() && !userIsAdmin(request.auth.uid);
    }

    match /members/{memberId} {
      // Admins have full access.
      allow read, write: if userIsAdmin(request.auth.uid);
      // Non-admins have read-only access.
      allow get, list: if isSignedIn() && !userIsAdmin(request.auth.uid);
    }

    match /payments/{paymentId} {
      // Admins have full access.
      allow read, write: if userIsAdmin(request.auth.uid);
      // Non-admins have read-only access.
      allow get, list: if isSignedIn() && !userIsAdmin(request.auth.uid);
    }

    match /expenses/{expenseId} {
      // Admins have full access.
      allow read, write: if userIsAdmin(request.auth.uid);
      // Non-admins have read-only access.
      allow get, list: if isSignedIn() && !userIsAdmin(request.auth.uid);
    }

    match /contributionSettings/{settingId} {
      // Admins have full access.
      allow read, write: if userIsAdmin(request.auth.uid);
      // Non-admins have read-only access.
      allow get, list: if isSignedIn() && !userIsAdmin(request.auth.uid);
    }

    match /notes/{noteId} {
      // Admins have full access.
      allow read, write: if userIsAdmin(request.auth.uid);
       // Non-admins have read-only access.
      allow get, list: if isSignedIn() && !userIsAdmin(request.auth.uid);
    }
  }
}
